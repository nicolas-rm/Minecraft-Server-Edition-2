{
  "format_version": "1.13.0",
  "minecraft:feature_rules": {
    "description": {
      "identifier": "better:extreme_hills_surface_special_spruce_tree_feature",
      "places_feature": "better:taiga_special_spruce_tree_feature"
    },
    "conditions": {
      "placement_pass": "surface_pass",
      "minecraft:biome_filter": [
        {
          "all_of": [
            {
              "test": "has_biome_tag",
              "operator": "==",
              "value": "extreme_hills"
            },
            {
              "any_of": [
                {
                  "test": "has_biome_tag",
                  "operator": "==",
                  "value": "edge"
                }
              ]
            }
          ]
        }
      ]
    },
    "distribution": {
      "iterations": 2,
      "x": {
        "distribution": "uniform",
        "extent": [ 0, 16 ]
      },
      "y": "query.heightmap(variable.worldx, variable.worldz)",
      "z": {
        "distribution": "uniform", 
        "extent": [ 0, 16 ]
      }
    }
  }
}
