{
  "format_version": "1.13.0",
  "minecraft:feature_rules": {
    "description": {
      "identifier": "better:alps_surface_spruce_tree_feature",
      "places_feature": "minecraft:spruce_tree_feature"
    },
    "conditions": {
      "placement_pass": "surface_pass",
      "minecraft:biome_filter": [
        {
          "test": "has_biome_tag",
          "operator": "==",
          "value": "alps"
        },
        {
          "any_of": [
            {
              "test": "has_biome_tag",
              "operator": "==",
              "value": "edge"
            },
            {
              "test": "has_biome_tag",
              "operator": "==",
              "value": "forest"
            }
          ]
        }
      ]
    },
    "distribution": {
      "iterations": 5,
      "x": {
        "distribution": "uniform",
        "extent": [ 0, 16 ]
      },
      "y": "query.heightmap(variable.worldx, variable.worldz)",
      "z": {
        "distribution": "uniform", 
        "extent": [ 0, 16 ]
      }
    }
  }
}
