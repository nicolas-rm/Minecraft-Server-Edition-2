{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "better:tomato_crop",
            "properties": {
                "better:growth_stage": [0, 1, 2, 3, 4, 5, 6]
            }
        },
        "components": {
            "minecraft:material_instances": {
                "*": {
                    "texture": "tomato_stage0",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:geometry": "geometry.crop",
            "minecraft:entity_collision": false,
            "minecraft:pick_collision": {
                "origin": [ -8, 0, -8 ],
                "size": [ 16, 16, 16 ]
            },
            "minecraft:destroy_time": 0.0,
            "minecraft:friction": 0.6,
            "minecraft:map_color": "#000000",
            "minecraft:block_light_absorption": 0.0,
            "minecraft:loot": "loot_tables/crops/tomato_crop_n.json",
            "minecraft:on_interact": {
                "event": "meal",
                "condition": "query.get_equipped_item_name('main_hand') == 'bone_meal'"
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "grow_stage"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": ["up"],
                        "block_filter": ["farmland"]
                    }
                ]
            }
        },

        "events": {
            "grow_stage": {
                "randomize": [
                    {
                        "weight": 1
                    },
                    {
                        "weight": 1,
                        "set_block_property": {
                            "better:growth_stage": "(query.block_property('better:growth_stage')<6) ? query.block_property('better:growth_stage') + 1 : 6"
                        }
                    }
                ]
            },
            "meal": {
                "sequence": [
                    {
                        "decrement_stack": {}
                    },
                    {
                        "run_command": {
                            "command": [
                                "particle minecraft:crop_growth_emitter ~~~"
                            ]
                        }
                    },
                    {
                        "trigger": {
                            "event": "grow_stage"
                        }
                    }
                ]
            }
        },

        "permutations": [
            {
                "condition": "query.block_property('better:growth_stage') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "tomato_stage0",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-5,0,-5],
                        "size": [10,5,10]
                    }
                }
            },
            {
                "condition": "query.block_property('better:growth_stage') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "tomato_stage0",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-5,0,-5],
                        "size": [10,5,10]
                    }
                }
            },
            {
                "condition": "query.block_property('better:growth_stage') == 2",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "tomato_stage1",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-6.5,0,-6.5],
                        "size": [13,7,13]
                    }
                }
            },
            {
                "condition": "query.block_property('better:growth_stage') == 3",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "tomato_stage1",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-6.5,0,-6.5],
                        "size": [13,7,13]
                    }
                }
            },
            {
                "condition": "query.block_property('better:growth_stage') == 4",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "tomato_stage2",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-8,0,-8],
                        "size": [16,14,16]
                    }
                }
            },
            {
                "condition": "query.block_property('better:growth_stage') == 5",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "tomato_stage2",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-8,0,-8],
                        "size": [16,15,16]
                    }
                }
            },
            {
                "condition": "query.block_property('better:growth_stage') == 6",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "tomato_stage3",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-8,0,-8],
                        "size": [16,16,16]
                    },
                    "minecraft:loot": "loot_tables/crops/tomato_crop_f.json"
                }
            }
        ]
    }
}
