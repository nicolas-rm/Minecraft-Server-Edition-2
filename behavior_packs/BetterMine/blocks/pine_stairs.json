{
  "format_version": "1.16.100",
  "minecraft:block": {
    "description": {
      "identifier": "better:pine_stairs",
      "properties": {
        "stair:rotation": [
          0,
          1,
          2,
          3,
          4,
          5
        ]
      }
    },
    "components": {
      "minecraft:loot": "loot_tables/blocks/pine_stairs.json",
      "minecraft:destroy_time": 0.8,
      "minecraft:friction": 0.6,
      "minecraft:map_color": "#FFFFFF",
      "minecraft:explosion_resistance": 1,
      "minecraft:block_light_absorption": 0.0,
      "minecraft:block_light_emission": 0.0,
      "tag:wood": {},
      "minecraft:geometry": "geometry.stairs",
      "minecraft:material_instances": {
        "*": {
          "texture": "planks_pine",
          "render_method": "blend",
          "ambient_occlusion": false
        }
      },
      "minecraft:on_player_placing": {
        "event": "update_rotation"
      },
      "minecraft:entity_collision": {
        "origin": [
          -8,
          0,
          -8
        ],
        "size": [
          16,
          16,
          16
        ]
      },
      "minecraft:pick_collision": {
        "origin": [
          -8,
          0,
          -8
        ],
        "size": [
          16,
          16,
          16
        ]
      },
      "minecraft:on_placed": {
        "event": "replace_barrier",
        "target": "self"
      },
      "minecraft:on_player_destroyed": {
        "event": "replace_air",
        "target": "self"
      },
      "minecraft:ticking": {
        "looping": true,
        "range": [
          1,
          2
        ],
        "on_tick": {
          "event": "replace_barrier",
          "target": "self"
        }
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('stair:rotation') == 2",
        "components": {
          "minecraft:rotation": [
            0,
            0,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('stair:rotation') == 3",
        "components": {
          "minecraft:rotation": [
            0,
            -180,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('stair:rotation') == 4",
        "components": {
          "minecraft:rotation": [
            0,
            90,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('stair:rotation') == 5",
        "components": {
          "minecraft:rotation": [
            0,
            -90,
            0
          ]
        }
      }
    ],
    "events": {
      "update_rotation": {
        "set_block_property": {
          "stair:rotation": "query.cardinal_facing_2d"
        }
      },
      "replace_barrier": {
        "run_command": {
          "command": [
            "fill ~ ~-1 ~ ~ ~-1 ~ air 0 replace air"
          ]
        }
      },
      "replace_air": {
        "run_command": {
          "command": [
            "fill ~ ~-1 ~ ~ ~-1 ~ air 0 replace air"
          ]
        }
      }
    }
  }
}
