{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "better:iceologer",
      "population_control": "monster"
    },
    "conditions": [
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": [
          "minecraft:grass",
          "minecraft:snow",
          "minecraft:stone"
        ],
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 15,
          "adjust_for_weather": false
        },
        "minecraft:weight": {
          "default": 8
        },
        "minecraft:herd": {
          "min_size":1,
          "max_size":3
        },
        "minecraft:biome_filter": {
          "test": "has_biome_tag", "operator":"==", "value": "largem"
        }
      }
    ]
  }
}
