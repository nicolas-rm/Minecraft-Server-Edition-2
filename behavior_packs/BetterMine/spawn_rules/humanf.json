{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "better:humanf",
      "population_control": "animal"
    },
    "conditions": [
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": [
          "minecraft:grass",
          "minecraft:planks",
          "minecraft:dirt"
        ],
        "minecraft:brightness_filter": {
          "min": 7,
          "max": 15,
          "adjust_for_weather": false
        },
        "minecraft:weight": {
          "default": 5
        },
        "minecraft:herd": {
          "min_size":2,
          "max_size":5
        },
        "minecraft:biome_filter": {
          "test": "has_biome_tag", "operator":"==", "value": "lands"
        }
      },
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": "minecraft:planks",
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 15,
          "adjust_for_weather": false
        },
        "minecraft:weight": {
          "default": 5
        },
        "minecraft:herd": {
          "min_size":6,
          "max_size":8
        },
        "minecraft:biome_filter": {
          "all_of": [
            {"test": "has_biome_tag", "operator":"==", "value": "lands"},
            {"test": "has_biome_tag", "operator":"!=", "value": "mutated"},
            {"test": "has_biome_tag", "operator":"!=", "value": "mountain"}
          ]
        }
      },
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": [
          "minecraft:grass",
          "minecraft:planks",
          "better:dirtpatched",
          "better:granite_cobble",
          "minecraft:grass_path",
          "minecraft:stone",
          "minecraft:dirt"
        ],
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 15,
          "adjust_for_weather": false
        },
        "minecraft:weight": {
          "default": 100
        },
        "minecraft:herd": {
          "min_size":6,
          "max_size":8
        },
        "minecraft:biome_filter": {
          "all_of": [
            {"test": "has_biome_tag", "operator":"==", "value": "red_town"}
          ]
        }
      }
    ]
  }
}
