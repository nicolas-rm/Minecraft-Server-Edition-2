{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "minecraft:pillager",
      "population_control": "monster"
    },
    "conditions": [
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": [
          "minecraft:grass",
          "minecraft:podzol",
          "minecraft:dirt"
        ],
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 7,
          "adjust_for_weather": false
        },
        "minecraft:weight": {
          "default": 100
        },
        "minecraft:herd": {
          "min_size":4,
          "max_size":6
        },
        "minecraft:biome_filter": {
          "test": "has_biome_tag", "operator":"==", "value": "roofed"
        }
      },
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": "minecraft:blackstone",
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 15,
          "adjust_for_weather": false
        },
        "minecraft:weight": {
          "default": 5
        },
        "minecraft:herd": {
          "min_size":3,
          "max_size":5
        },
        "minecraft:biome_filter": {
          "all_of": [
            {"test": "has_biome_tag", "operator":"==", "value": "hb"},
            {"test": "has_biome_tag", "operator":"!=", "value": "mutated"},
            {"test": "has_biome_tag", "operator":"!=", "value": "birch"},
            {"test": "has_biome_tag", "operator":"!=", "value": "roofed"},
            {"test": "has_biome_tag", "operator":"!=", "value": "mountain"}
          ]
        }
      }
    ]
  }
}
